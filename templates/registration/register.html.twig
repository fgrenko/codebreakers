{% extends 'base.html.twig' %}
{% form_theme registrationForm 'tailwind_2_layout.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="max-w-md mx-auto my-8 bg-white p-6 rounded-md shadow-md">
        <h1 class="text-2xl font-bold mb-4">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}

        <div class="mb-4">
            {{ form_row(registrationForm.email, { 'attr': {'class': 'form-input'} }) }}
        </div>

        <div class="mb-4">
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Password',
                'attr': {'class': 'form-input'}
            }) }}
        </div>

        <div class="mb-4">
            <label class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-checkbox'}}) }}
                <span class="ml-2 text-sm">I agree to the terms and conditions</span>
            </label>
        </div>

        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md">Register</button>
        {{ form_end(registrationForm) }}

        <div class="mt-4">
            <h2 class="text-sm">Already have an account? <a href="/" class="text-blue-500 hover:underline">Sign in here.</a></h2>
        </div>
    </div>
{% endblock %}
